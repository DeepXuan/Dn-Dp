{
    "name": "Liver_128_sr3_epsilon",
    "phase": "train", // train or val
    "gpu_ids": [
        0
    ],
    "path": { //set the path
        "log": "logs",
        "tb_logger": "tb_logger",
        "results": "results",
        "checkpoint": "checkpoint",
        "resume_state": null
    },
    "datasets": {
        "train": {
            "name": "Liver",
            "mode": "HR", // whether need LR img
            "dataroot": "F:\\CT_png\\LDCT_full_png\\LDCT_full_png_Liver",
            "datatype": "img", //lmdb or img, path of img files
            "exclude_patients": ["L286", "L291", "L310", "L333", "L506"],
            "l_resolution": 0, // low resolution need to super_resolution
            "r_resolution": 128, // high resolution
            "batch_size": 16, // 32
            "num_workers": 8,
            "use_shuffle": true,
            "data_len": -1 // -1 represents all data used in train
        },
        "val": {
            "name": "Liver",
            "mode": "HR",
            "dataroot": "F:\\CT_png\\AAPM_full_png",
            "datatype": "img", //lmdb or img, path of img files
            "include_patients": ["L506"],
            "l_resolution": 0,
            "r_resolution": 128,
            "data_len": 5
        }
    },
    "model": {
        "which_model_G": "sr3", // use the ddpm or sr3 network structure
        "mean_type": "epsilon", // "epsilon", "x0", "mu", "v", "x0_and_epsilon", when using "x0_and_epsilon", out_channel=2
        "finetune_norm": false,
        "unet": {
            "in_channel": 1,
            "out_channel": 1,
            "inner_channel": 64,
            "channel_multiplier": [
                1,
                2,
                4,
                8,
                8
            ],
            "attn_res": [
                16
            ],
            "res_blocks": 2,
            "dropout": 0.2,
            "patch_n": 2 // https://arxiv.org/abs/2207.04316
        },
        "beta_schedule": { // use munual beta_schedule for acceleration
            "train": {
                "schedule": "linear",
                "n_timestep": 2000,
                "linear_start": 1e-6, // 1e-6
                "linear_end": 1e-2 // 1e-2
            },
            "val": {
                "schedule": "linear",
                "n_timestep": 2000,
                "linear_start": 1e-6,
                "linear_end": 1e-2
            }
        },
        "diffusion": {
            "image_size": 128,
            "channels": 1, //sample channel
            "conditional": false // unconditional generation or unconditional generation(super_resolution)
        }
    },
    "train": {
        "n_iter": 200000,
        "val_freq": 1e4, //1e4
        "save_checkpoint_freq": 1e4,
        "print_freq": 200,
        "optimizer": {
            "type": "adamw",
            "lr": 1e-4
        },
        "ema_scheduler": { // not used now
            "step_start_ema": 5000,
            "update_ema_every": 1,
            "ema_decay": 0.9999
        }
    }
}
